.container
  .content
    .row
      %h2="Ram's Graph Search"
    .row
      %form.form-search{:method => "get", :action => "/user/#{current_user.uid}/search"}
        .input-append
          %input.span5.search-query{:type => "text", :value => @q, :name => "q"}
          %button.btn Search           
        Try: 
        %a{:href => "/user/#{current_user.uid}/search?q=friends+who+like+walmart"}
          friends who like walmart
        ,
        %a{:href => "/user/#{current_user.uid}/search?q=people+who+like+movies+and+popcorn"}
          people who like movies and popcorn
        ,
        %a{:href => "/user/#{current_user.uid}/search?q=people+who+like+fitness+and+live+in+Fremont"}
          people who like fitness and live in Fremont 
    .row
      .span6
        .well
          %h2="Cypher Query:"
          = @cypher[0]
          %br
          -if @cypher[1]
            Parameters:
            = @cypher[1]
    .row
      %ul.thumbnails
        - @people.each do |person|
          %li.span3
            .thumbnail
              %a{:href => "/user/#{person[1]}"}
                %img{:src => (person[3] == "" ? "/images/icon_no_photo_80x80.png" : person[3] ) }
                =person[2]
             
